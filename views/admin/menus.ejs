<%- include("./includes/header") %> 


<div class="row m-5  ">

<% for(let i=0;i<menus.length;i++) {%>
    <div class="col-md-6 p-5 col-xl-4">
     
      <div class="card menu  m-4" style="width: 18rem;">
        <img  width="100%" height="300" src="<%= menus[i].url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title name"><%= menus[i].name %></h5>
          <p class="card-text"><%= menus[i].description %></p>
          
            <div class="d-flex justify-content-between">
              <form action="/admin/edit" method="GET">
                <input type="hidden" name="id" value="<%= menus[i]._id %>">
                <button type="submit"  class="btn btn-secondary">Edito</button>
              </form>
              <form action="/admin/menu/delete" method="POST">
                <input type="hidden" name="id" value="<%= menus[i]._id %>">
                <button type="submit"  class="btn btn-secondary">Fshije</button>
              </form>
            </div>
        </div>
      </div>
    </div>

  <% } %> 
  
</div>
<%- include("./includes/footer") %>
